<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd"><sqlMap namespace="ren.sing.dao.table">	<insert id="bill_insert" parameterClass="com.sing.ren.pojo.Bill">		<![CDATA[			INSERT INTO BILL (				bill_id,				class_master_id,				student_id,				discount,				payment,				pay_method,				pay_date,				entry_date,				updater,				update_time				) VALUES (				#billId#,				#classMasterId#,				#studentId#,				#discount#,				#payment#,				#payMethod#,				#payDate#,				#entryDate#,				#updater#,				#updateTime#			)		]]>	</insert>	<select id="bill_query" resultClass="java.util.HashMap" parameterClass="com.sing.ren.pojo.Bill">		<![CDATA[			SELECT bill_id,class_master_id,student_id,discount,payment,pay_method,pay_date,entry_date,updater,update_time			FROM BILL			WHERE 1		]]>		<isNotEmpty prepend="AND" property="billId">			<![CDATA[ bill_id = #billId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="classMasterId">			<![CDATA[ class_master_id = #classMasterId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="studentId">			<![CDATA[ student_id = #studentId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="discount">			<![CDATA[ discount = #discount#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="payment">			<![CDATA[ payment = #payment#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="payMethod">			<![CDATA[ pay_method = #payMethod#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="payDate">			<![CDATA[ pay_date = #payDate#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="entryDate">			<![CDATA[ entry_date = #entryDate#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="updater">			<![CDATA[ updater = #updater#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="updateTime">			<![CDATA[ update_time = #updateTime#  ]]>		</isNotEmpty>		<isNotEmpty property="order">			<![CDATA[	ORDER BY $order$	]]>		</isNotEmpty>		<isNotEmpty property="rowLimit">			<isNotEmpty prepend="LIMIT" property="fromIndex">				<![CDATA[ $fromIndex$, $rowLimit$ ]]>			</isNotEmpty>			<isEmpty prepend="LIMIT" property="fromIndex">				<![CDATA[ LIMIT $rowLimit$ ]]>			</isEmpty>		</isNotEmpty>	<!--  	<include refid="limit_offset" /> -->	</select>	<update id="bill_update" parameterClass="com.sing.ren.pojo.Bill">		<![CDATA[			UPDATE BILL SET			bill_id = #billId#		]]>		<isNotEmpty prepend="," property="billId">			<![CDATA[ bill_id = #billId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="classMasterId">			<![CDATA[ class_master_id = #classMasterId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="studentId">			<![CDATA[ student_id = #studentId#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="discount">			<![CDATA[ discount = #discount#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="payment">			<![CDATA[ payment = #payment#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="payMethod">			<![CDATA[ pay_method = #payMethod#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="payDate">			<![CDATA[ pay_date = #payDate#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="entryDate">			<![CDATA[ entry_date = #entryDate#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="updater">			<![CDATA[ updater = #updater#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="updateTime">			<![CDATA[ update_time = #updateTime#  ]]>		</isNotEmpty>		<![CDATA[			WHERE				bill_id = #billId#		]]>	</update>	<delete id="bill_delete" parameterClass="com.sing.ren.pojo.Bill">		<![CDATA[			DELETE FROM BILL WHERE bill_id = #billId#		]]>	</delete></sqlMap>
<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd"><sqlMap namespace="ren.sing.dao.table">	<insert id="account_insert" parameterClass="com.sing.ren.pojo.Account">		<![CDATA[			INSERT INTO ACCOUNT (				account,				password,				role				) VALUES (				#account#,				#password#,				#role#			)		]]>	</insert>	<select id="account_query" resultClass="java.util.HashMap" parameterClass="com.sing.ren.pojo.Account">		<![CDATA[			SELECT account,password,role			FROM ACCOUNT			WHERE 1		]]>		<isNotEmpty prepend="AND" property="account">			<![CDATA[ account = #account#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="password">			<![CDATA[ password = #password#  ]]>		</isNotEmpty>		<isNotEmpty prepend="AND" property="role">			<![CDATA[ role = #role#  ]]>		</isNotEmpty>		<isNotEmpty property="order">			<![CDATA[	ORDER BY $order$	]]>		</isNotEmpty>		<isNotEmpty property="rowLimit">			<isNotEmpty prepend="LIMIT" property="fromIndex">				<![CDATA[ $fromIndex$, $rowLimit$ ]]>			</isNotEmpty>			<isEmpty prepend="LIMIT" property="fromIndex">				<![CDATA[ LIMIT $rowLimit$ ]]>			</isEmpty>		</isNotEmpty>	<!--  	<include refid="limit_offset" /> -->	</select>	<update id="account_update" parameterClass="com.sing.ren.pojo.Account">		<![CDATA[			UPDATE ACCOUNT SET			account = #account#		]]>		<isNotEmpty prepend="," property="account">			<![CDATA[ account = #account#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="password">			<![CDATA[ password = #password#  ]]>		</isNotEmpty>		<isNotEmpty prepend="," property="role">			<![CDATA[ role = #role#  ]]>		</isNotEmpty>		<![CDATA[			WHERE				account = #account#		]]>	</update>	<delete id="account_delete" parameterClass="com.sing.ren.pojo.Account">		<![CDATA[			DELETE FROM ACCOUNT WHERE account = #account#		]]>	</delete></sqlMap>
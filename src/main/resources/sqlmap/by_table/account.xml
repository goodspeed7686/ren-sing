<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd"><sqlMap namespace="ren.sing.dao.table">	<insert id="account_insert" parameterClass="java.util.HashMap">		<![CDATA[			INSERT INTO ACCOUNT (				account,				password,				role				) VALUES (				#account#,				#password#,				#role#			)		]]>	</insert>	<select id="account_query" resultClass="java.util.HashMap" parameterClass="java.util.HashMap">		<![CDATA[			SELECT account,password,role			FROM ACCOUNT		]]>		<dynamic prepend="WHERE">			<isNotEmpty prepend="AND" property="account">				<![CDATA[ account = #account#  ]]>			</isNotEmpty>			<isNotEmpty prepend="AND" property="password">				<![CDATA[ password = #password#  ]]>			</isNotEmpty>			<isNotEmpty prepend="AND" property="role">				<![CDATA[ role = #role#  ]]>			</isNotEmpty>		</dynamic>		<isNotEmpty property="order">			<![CDATA[	ORDER BY $order$	]]>		</isNotEmpty>		<isNotEmpty prepend="LIMIT" property="rowLimit">			<isNotEmpty property="fromIndex">				<![CDATA[ $fromIndex$, $rowLimit$ ]]>			</isNotEmpty>			<isEmpty property="fromIndex">				<![CDATA[ $rowLimit$ ]]>			</isEmpty>		</isNotEmpty>	<!--  	<include refid="limit_offset" /> -->	</select>	<update id="account_update" parameterClass="java.util.HashMap">		<![CDATA[			UPDATE ACCOUNT		]]>		<dynamic prepend="SET">			<isNotEmpty prepend="," property="account">				<![CDATA[ account = #account#  ]]>			</isNotEmpty>			<isNotEmpty prepend="," property="password">				<![CDATA[ password = #password#  ]]>			</isNotEmpty>			<isNotEmpty prepend="," property="role">				<![CDATA[ role = #role#  ]]>			</isNotEmpty>		</dynamic>		<![CDATA[			WHERE				account = #account#		]]>	</update>	<delete id="account_delete" parameterClass="java.util.HashMap">		<![CDATA[			DELETE FROM ACCOUNT WHERE account = #account#		]]>	</delete>	<insert id="account_upsert" parameterClass="java.util.HashMap">		<![CDATA[			INSERT INTO ACCOUNT (				account,				password,				role				) VALUES (				#account#,				#password#,				#role#			)			ON DUPLICATE KEY UPDATE				account = #account#,				password = #password#,				role = #role#		]]>	</insert></sqlMap>